<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firelink.gw2.events"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="14" 
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@android:style/Theme.Holo.Light.NoActionBar"
        android:allowBackup="true">
        <activity
            android:label="@string/app_name"
            android:name="com.firelink.gw2.events.EventActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.firelink.gw2.events.firstStart.FirstRun" >
        </activity>
        <activity 
            android:name="com.firelink.gw2.events.SingleEventActivity" >
        </activity>
    </application>

</manifest>
