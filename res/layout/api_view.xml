<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView 
    	android:id="@+id/apiView_gw2LogoImageView"
    	android:layout_width="fill_parent"
    	android:layout_height="80dp"
    	android:layout_alignParentTop="true" 
    	android:src="@drawable/gw2logo_transparent"
    	android:scaleType="fitCenter" 
    	android:contentDescription="@string/just_a_logo" />
    
    <TextView 
        android:id="@+id/apiView_resultTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="#555"
        android:background="@drawable/server_name_background"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_below="@id/apiView_gw2LogoImageView" />
    
    <ListView 
        android:id="@+id/apiView_eventListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/apiView_resultTextView" />"
    
</RelativeLayout>